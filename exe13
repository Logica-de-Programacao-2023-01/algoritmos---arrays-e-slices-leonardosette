package main

import "fmt"

// Crie um Array de inteiros com 7 elementos. Solicite ao usuário que informe um número que será adicionado
// ao primeiro e ao último elemento do Array. Imprima o Array resultante.
func main() {
	var primeiro, ultimo int
	array := [7]int{1, 2, 3, 4, 5, 6, 7}
	fmt.Print("Digite o valor do primeiro elemento:")
	fmt.Scan(&primeiro)
	array[0] = primeiro
	fmt.Print("Digite o valor do ultimo elemento:")
	fmt.Scan(&ultimo)
	array[6] = ultimo
	fmt.Print(array)
}
